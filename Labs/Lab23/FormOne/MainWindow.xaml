<Window x:Class="FormOne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormOne"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="black">
    <Grid>
        <Button x:Name="ButtonHide" Content="Скрыть" HorizontalAlignment="Left" Margin="40,39,0,0" VerticalAlignment="Top" Click="ButtonHide_Click"/>
        <Button x:Name="ButtonShow" Content="Показать" HorizontalAlignment="Left" Margin="101,39,0,0" VerticalAlignment="Top" Click="ButtonShow_Click"/>
        <Button x:Name="ButtonClear" Content="Очистить" HorizontalAlignment="Left" Margin="171,39,0,0" VerticalAlignment="Top" Click="ButtonClear_Click"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Margin="40,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="138"/>

    </Grid>
</Window>
